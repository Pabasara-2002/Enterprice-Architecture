<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">

    <!-- Existing Servlet (DisplayMessageServlet) -->
    <servlet>
        <servlet-name>DisplayMessageServlet</servlet-name>
        <servlet-class>com.example.DisplayMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayMessageServlet</servlet-name>
        <url-pattern>/displayMessage</url-pattern>
    </servlet-mapping>
<servlet>
    <servlet-name>GetUserInputServlet</servlet-name>
    <servlet-class>com.example.GetUserInputServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>GetUserInputServlet</servlet-name>
    <url-pattern>/GetUserInputServlet</url-pattern>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StockManagementServlet</servlet-name>
        <servlet-class>com.example.StockManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StockManagementServlet</servlet-name>
        <url-pattern>/stockManagement</url-pattern>
    </servlet-mapping>
</servlet-mapping>

    
</web-app>
